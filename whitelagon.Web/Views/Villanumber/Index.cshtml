
@model IEnumerable<Villanumber>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">

        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">VillaNumber List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row">
            <div class="col-12">
                <a asp-action="Create" asp-controller="Villanumber" class="btn btn-secondary"><i class="bi bi-plus-circle-fill"></i> Create New Villa</a>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>VillaNumber</th>
                <th>Special Details</th>
                       </tr>
        </thead>
        <tbody>
            @foreach (var villa in Model)
            {
                <tr>
                    
                    <td>@villa.Villa.Name</td>
                    <td>@villa.Villa_Number</td>
                    <td>@villa.PublicDetails</td>
                 

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Villanumber" asp-action="Update" asp-route-Id="@villa.Villa_Number"
                               class="btn btn-success mx-2">
                                <i class="bi bi-pencil-square"></i>Update
                            </a>
                            <a asp-controller="Villanumber" asp-action="Delete" asp-route-Id="@villa.Villa_Number"
                               class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>

    </table>
</div>
