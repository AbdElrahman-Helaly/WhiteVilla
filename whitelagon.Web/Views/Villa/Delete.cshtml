 @model Villa


<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3"
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Delete Villa</h2>
        </div>
    </div>


<form method="post" class="row">
    <div class="p-3">
        <div asp-validation-summary="All"></div>
        <div class="form-floationg py-1 col-12">
                <label asp-for="Name" class="ms-2">Name</label>
            <input asp-for="@Model.Name" disabled class="form-control border shadow"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-floationg py-1 col-12">
                <label asp-for="Description" class="ms-2">Description</label>
            <input asp-for="Description" disabled class="form-control border shadow"/>
                        <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="form-floationg py-1 col-12">
                <label asp-for="Price" class="ms-2"></label>
            <input asp-for="Price" disabled class="form-control border shadow"/>
        </div>
        <div class="form-floationg py-1 col-12">
                <label asp-for="Sqft" class="ms-2">Sqft</label>
            <input asp-for="Sqft" disabled class="form-control border shadow"/>
        </div>
          <div class="form-floationg py-1 col-12">
                <label asp-for="Occupancy" class="ms-2">Occupancy</label>
            <input asp-for="Occupancy" disabled class="form-control border shadow"/>
        </div>
             <div class="form-floationg py-1 col-12">
                <label asp-for="ImageUrl" class="ms-2">ImageUrl</label>
            <input asp-for="ImageUrl" disabled class="form-control border shadow"/>
        </div>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger w-100">Delete
                    <i class="bi bi-plus-circle-fill"></i>
                    </button>
                    </div>


             <div class="col-6 col-md-3">
            <a asp-action="Index" class="btn btn-secondary w-100"> Cancel
                <i class="bi bi-x-circle-fill"></i>
            </a>
        </div>
        </div>

    </div>


</form>
</div>
